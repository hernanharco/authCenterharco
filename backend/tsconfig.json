{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    
    // ðŸ›‘ NUEVAS PROPIEDADES PARA EL ALIAS DE RUTA
    "baseUrl": "./src", 
    "paths": {
      "@/*": ["*"] 
    }
  },
  "include": ["src", "src/types"]
}