{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "forceConsistentCasingInFileNames": true,
    /* --- SOLUCIÓN A ERRORES EN RENDER --- */
    "skipLibCheck": true, 
    "typeRoots": [
      "./node_modules/@types"
    ],
    "types": [
      "node", 
      "express", 
      "cookie-parser", 
      "jsonwebtoken"
    ],
    /* --- CONFIGURACIÓN DE RUTAS --- */
    "baseUrl": ".", 
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules", 
    "dist",
    "**/*.test.ts"
  ]
}